{
  "typeName": "AWS::CodeGuruReviewer::Repository",
  "description": "An example resource schema demonstrating some basic constructs and validation rules.",
  "sourceUrl": "https://github.com/aws-cloudformation/aws-cloudformation-rpdk.git",
  "definitions": {},
  "properties": {
    "Name": {
      "description": "Name of the repository to be associated.",
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "pattern": "^\\S[\\w.-]*$"
    },
    "ProviderType": {
      "description": "The type of repository to be associated.",
      "type": "string",
      "enum": [
        "CodeCommit",
        "Bitbucket"
      ]
    },
    "Owner": {
      "description": "The owner of the repository. For a GitHub or Bitbucket repository, this is the username for the account that owns the repository.",
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "pattern": "^\\S(.*\\S)?$"
    },
    "ConnectionArn": {
      "description": "The Amazon Resource Name (ARN) of an AWS CodeStar Connections connection.",
      "type": "string",
      "minLength": 0,
      "maxLength": 256,
      "pattern": "arn:aws(-[\\w]+)*:.+:.+:[0-9]{12}:.+"
    }
  },
  "additionalProperties": false,
  "required": [
    "Name",
    "ProviderType"
  ],
  "readOnlyProperties": [
    "/properties/Name"
  ],
  "primaryIdentifier": [
    "/properties/Name"
  ],
  "handlers": {
    "create": {
      "permissions": [
        "codeguru-reviewer:AssociateRepository"
      ]
    },
    "read": {
      "permissions": [
        "codeguru-reviewer:DescribeRepositoryAssociation"
      ]
    },
    "update": {
      "permissions": []
    },
    "delete": {
      "permissions": [
        "codeguru-reviewer:DisassociateRepository"
      ]
    },
    "list": {
      "permissions": [
        "codeguru-reviewer:ListRepositoryAssociations"
      ]
    }
  }
}
